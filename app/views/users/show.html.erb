<div class="container">
    <% provide(:title, @user.user_name) %>
      <div class="parent">
      <p><%= gravatar_for @user %></p>
      <div class="inner">
        <h4 class="text-center">名前     :<%= @user.name %></h4>
        <h4 class="text-center">ユーザー名:<%= @user.user_name %></h4>
        <div class="text-center my-3">
          <%= render 'shared/stats' %>
        </div>
        <h4 class="text-center">自己紹介:</h4>
        <p><%= @user.introduction %></p>
        <p><%= link_to "ユーザー編集", edit_user_path(current_user), class: "btn btn-outline-primary" %></p>
        <p>
          <%= render 'follow_form' if logged_in? %>
        </p>
      </div>
    </div>
  <div class="container">
  <div class="text-center my-3">
    <% if @user.microposts.any? %>
      <h3>投稿数(<%= @user.microposts.count %>)</h3>
      <ul class="list-unstyled">
        <%= render @microposts %>
      </ul>
      <%= paginate @microposts %>
    <% end %>
  </div>
  </div>
</div>
