<li class="my-5">
<div class="card">
  <div class="card-header">
    <%= micropost.title %>
  </div>
  <div class="card-body">
    <h1 class="card-title">
      <%= link_to micropost.user.name, micropost.user %>
    </h1>
    <div class="side_by_side">
      <p><%= link_to gravatar_for(micropost.user, size: 50), micropost.user %></p>
      <p><%= micropost.content %></p>
    </div>
    <p>
      最終更新::<%= time_ago_in_words(micropost.created_at) %>前
    </p>
    <% if current_user?(micropost.user) %>
      <p>
        <%= link_to "削除", micropost, method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除してよろしいですか？" } %>
      </p>
    <% end %>
    <p>
      <%= image_tag micropost.picture.url if micropost.picture? %>
    </p>
  </div>
</div>
</li>
